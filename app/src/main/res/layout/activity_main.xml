<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/gradient" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="40dp"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Driver"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:paddingTop="10dp"
                    android:layout_height="125dp"
                    android:paddingBottom="20dp"
                    android:src="@drawable/history" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="history"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="40dp"
                    android:src="@drawable/customerservice" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="support"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:adjustViewBounds="true"
                    android:paddingTop="10dp"
                    android:paddingBottom="30dp"
                    android:src="@drawable/logout" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="90dp"
                    android:gravity="center"
                    android:text="Exit"
                    android:textColor="#000000" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ll1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/paking" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="102dp"
                    android:gravity="center"
                    android:text="packing "
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/comment" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="94dp"
                    android:gravity="center"
                    android:text="feedback"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/layout_bg">

                <ImageView
                    android:id="@+id/gbr1"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="30dp"
                    android:src="@drawable/setting" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="64dp"
                    android:layout_height="23dp"
                    android:layout_alignLeft="@+id/gbr1"
                    android:layout_alignTop="@+id/gbr1"
                    android:layout_alignRight="@+id/gbr1"
                    android:layout_alignBottom="@+id/gbr1"
                    android:layout_marginTop="94dp"
                    android:gravity="center"
                    android:text="Settings"
                    android:textColor="#000000" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>